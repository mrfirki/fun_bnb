                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                        <%= f.text_field :country, :class=> "form-control", :value => "#{@user.country}", :placeholder => "country"  %>
                        <!-- <input type="text" class="form-control" placeholder="Last Name" /> -->
                    </div>
                </div>

                 <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                        <%= f.text_field :passport_id, :class=> "form-control", :value => "#{@user.passport_id}", :placeholder => "passport_id"  %>
                        <!-- <input type="text" class="form-control" placeholder="Last Name" /> -->
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                        <%= f.file_field :avatar, :class=> "form-control", :value => "#{@user.avatar}", :placeholder => "avatar"  %>
                        <!-- <input type="text" class="form-control" placeholder="Last Name" /> -->
                    </div>
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                        <% if current_user.role == "superadmin" %>
                        <%= f.text_field :role, :class=> "form-control", :value => "#{@user.role}", :placeholder => "role"  %>
                        <!-- <input type="text" class="form-control" placeholder="Last Name" /> -->
                        <% end %>
                    </div>
                </div>
                
                </div>
	                <center>
	                	<button class="btn btn-lg btn-primary" type="submit">Save</button>
