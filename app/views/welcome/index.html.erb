<% if signed_in? %>
<!-- dashborad -->

  <center>

    <%= form_tag root_path, :method => 'get' do %>
      <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search" %>
    <% end %>

    <%= link_to "Advanced Search", new_search_path %>

    <% @listings.each do |l| %>
      <div class="spacing"></div>

        <div class="row container-fluid">
          <div class="col-md-8 col-md-offset-2">
            <div class="form-group">
              <h3>owner list: <%= l.user.username %><br><h3>
              <h4>name: <%= l.name %><br></h4>
              <h4>address: <%= l.adress %><br></h4>
              <h4>home type: <%= l.home_type %><br></h4>
              <h4>room type: <%= l.room_type %><br></h4>
              <h4>place: <%= l.place %><br></h4>
              <h4>guest: <%= l.maximum_guests %><br></h4>
              <h4>availability from: <%= l.availability_from %><br></h4>
              <h4>availability to: <%= l.availability_to %><br></h4>
              <h4>price: <%= l.price %><br></h4>
              <%= image_tag "#{l.avatars.first}" %>
              <div>
                <%= link_to "booking", new_listing_reservation_path(l) %>
              </div>
              <!-- end of form group -->
          </div>
        </div>
      </div>
    <% end %>

       <%= will_paginate @listings %>
  
       
  </center>


<% else %>

  <!-- welcome page -->

	<center>
        <div class="welcome-page">
      		<h1 class="welcome-title">Welcome to Funbnb</h1>
      		<%= link_to "Sign in", sign_in_path, class: "btn btn-primary" %>
      		<%= link_to t(".sign_up"), sign_up_path, class: "btn btn-primary" %>
        </div> 
	</center>

<% end %>
